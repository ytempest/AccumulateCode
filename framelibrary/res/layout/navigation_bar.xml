<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/navigation_bar_style">

    <ImageButton
        android:id="@+id/ib_back"
        style="@style/navigation_back_view_style" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/navigation_title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="75.0dp"
        android:layout_marginRight="75.0dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_right_text"
        android:visibility="gone"
        style="@style/navigation_right_text_style"
        android:layout_alignParentRight="true" />
</RelativeLayout>